{
  "manifest_version": 2,
  "name": "Smile Internal Extension",
  "version": "0.1",
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "js/content.js"
      ]
    }
  ],
  "background": {
    "scripts": [
      "js/background.js"
    ]
  },
  "browser_action": {
    "default_icon": "assets/smileico.png",
    "default_popup": "html/popup.html"
  }
}
